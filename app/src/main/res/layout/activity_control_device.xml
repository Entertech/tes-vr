<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlDeviceActivity">

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="设备状态：设备电量 "
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReceiveMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="接受到的消息: "
        app:layout_constraintTop_toBottomOf="@id/tvDeviceInfo" />
    <Button
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnDown"
        app:layout_constraintEnd_toStartOf="@id/btnMiddle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMiddle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        app:layout_constraintEnd_toStartOf="@id/btnRight"
        app:layout_constraintStart_toEndOf="@id/btnLeft"
        app:layout_constraintTop_toTopOf="@id/btnLeft" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMiddle"
        app:layout_constraintTop_toTopOf="@id/btnLeft" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Up"
        app:layout_constraintBottom_toTopOf="@id/btnMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="改名"
        app:layout_constraintBottom_toTopOf="@id/btnUp"
        app:layout_constraintEnd_toStartOf="@id/btnCurrent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="电流调节"
        app:layout_constraintBottom_toBottomOf="@id/btnRename"
        app:layout_constraintEnd_toStartOf="@id/btnReadVersion"
        app:layout_constraintStart_toEndOf="@id/btnRename"
        app:layout_constraintTop_toTopOf="@id/btnRename" />

    <Button
        android:id="@+id/btnReadVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="读取版本"
        app:layout_constraintBottom_toBottomOf="@id/btnRename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCurrent"
        app:layout_constraintTop_toTopOf="@id/btnRename" />

    <Button
        android:id="@+id/btnShakeHand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="握手"
        app:layout_constraintBottom_toTopOf="@id/btnRename"
        app:layout_constraintEnd_toStartOf="@id/btnSetArgAndStart"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSetArgAndStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="设置参数并启动"
        app:layout_constraintBottom_toBottomOf="@id/btnShakeHand"
        app:layout_constraintEnd_toStartOf="@id/btnReadVersion"
        app:layout_constraintStart_toEndOf="@id/btnShakeHand"
        app:layout_constraintTop_toTopOf="@id/btnShakeHand" />

    <Button
        android:id="@+id/btnSendControlCommand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="发送控制命令"
        app:layout_constraintBottom_toBottomOf="@id/btnShakeHand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSetArgAndStart"
        app:layout_constraintTop_toTopOf="@id/btnShakeHand" />
</androidx.constraintlayout.widget.ConstraintLayout>